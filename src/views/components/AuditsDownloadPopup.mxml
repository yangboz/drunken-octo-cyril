<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   backgroundAlpha="0"
						   >
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			protected function cancel_btn_click_handler(event:MouseEvent):void
			{
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:BorderContainer width="565" height="332" backgroundImage="@Embed('../../assets/images/pop-bg1.png')" borderAlpha="0">
		<s:VGroup gap="60" paddingLeft="20" paddingTop="25" horizontalAlign="left" verticalAlign="middle">
			<s:Image source="@Embed('../../assets/images/logo.png')"/>
			<s:RichText color="0xFFFFFF"
						horizontalCenter="0" verticalCenter="0">
				<s:textFlow>
					<s:TextFlow>
						<s:p fontWeight="bold">Download Audits Request: </s:p>
						<s:p>You are about to download the selected audit(s).</s:p>
						<s:p>Please confirm or cancel this action.</s:p>
					</s:TextFlow>
				</s:textFlow>
			</s:RichText>
			<s:HGroup width="100%"  horizontalAlign="center" verticalAlign="middle" gap="30">
				<s:Button label="CANCEL" skinClass="skins.Skin_NormalButton" buttonMode="true" click="cancel_btn_click_handler(event)"/>
				<s:Button label="DOWNLOAD" skinClass="skins.Skin_NormalButton" buttonMode="true" click="cancel_btn_click_handler(event)"/>
			</s:HGroup>
		</s:VGroup>
	</s:BorderContainer>
</s:SkinnablePopUpContainer>
