<?xml version="1.0" encoding="utf-8"?>
<views:ViewBase xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:components="views.components.*"
	    creationComplete="view_creationCompleteHandler(event)"
		backgroundAlpha="0"
	    actionBarVisible="true"
		xmlns:views="views.*"
		xmlns:container="com.custardbelly.container.*"
		>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import skins.Skin_TransparentButton;
			
			[Bindable]
			public var data_vehicle:Object;
			//
			protected function loginBtn_clickHandler(event:MouseEvent):void
			{
//				this.navigator.pushView(HomeView);
//				trace(ResourceManager.getInstance().localeChain);
			}
			
			protected function view_creationCompleteHandler(event:FlexEvent):void
			{
				
			}
			
			protected function audits_btn_clickHandler(event:MouseEvent):void
			{
				this.navigator.pushView(AuditsView);		
			}
			
			protected function back_btn_clickHandler(event:MouseEvent):void
			{
				this.navigator.backKeyUpHandler();
			}
			protected function detail_btn_clickHandler(event:MouseEvent):void
			{
				this.navigator.pushView(AuditsDetailView);
			}
			protected function vehicle_btn_clickHandler(event:MouseEvent):void
			{
				this.navigator.pushView(VehicleListView);
			}
			protected function search_btn_clickHandler(event:MouseEvent):void
			{
				this.navigator.pushView(VehicleSearchView);
			}
		]]>
	</fx:Script>
	
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<!--<s:VGroup horizontalCenter="0" verticalCenter="0" horizontalAlign="center" verticalAlign="middle" 
			  paddingBottom="10"
			  paddingLeft="10"
			  paddingRight="10"
			  paddingTop="10"
			  >-->
	
		<s:BorderContainer width="1265" height="640" backgroundImage="@Embed('../assets/images/container-bg1.PNG')" borderAlpha="0">
			
			<s:VGroup paddingTop="30" verticalAlign="top" width="1251" height="58" paddingLeft="100" >
				<s:HGroup horizontalAlign="left">
					<s:Button label="Inspect"
							  enabled="{viewstack.selectedChild != child1}"
							  click="{viewstack.selectedChild = child1}" 
							  />
					<s:Button label="Other Outcome"
							  enabled="{viewstack.selectedChild != child2}"
							  click="{viewstack.selectedChild = child2}" 
							  />
					<s:Button label="Pictures"
							  enabled="{viewstack.selectedChild != child3}"
							  click="{viewstack.selectedChild = child3}" 
							  />
				</s:HGroup>
				<container:CBViewStack id="viewstack" 
									   width="1265" height="640" 
									   borderAlpha="0" borderVisible="false"
									   skinClass="com.custardbelly.skin.CBScrollableSkin">
					<s:BorderContainer id="child1" width="1140" height="396" backgroundImage="@Embed('../assets/images/table-bg1.png')" borderAlpha="0">
					</s:BorderContainer>
					<s:BorderContainer id="child2" width="1140" height="396" backgroundImage="@Embed('../assets/images/table-bg2.png')" borderAlpha="0">
					</s:BorderContainer>
					<s:BorderContainer id="child3" width="1140" height="396" backgroundImage="@Embed('../assets/images/table-bg3.png')" borderAlpha="0">
					</s:BorderContainer>
				</container:CBViewStack>
				<s:BorderContainer id="controlBar" width="1251" height="58" backgroundImage="@Embed('../assets/images/container-bg1.png')" borderAlpha="0">
					<s:HGroup horizontalCenter="0" horizontalAlign="center" verticalAlign="middle" gap="27" height="100%">
						<s:Button icon="@Embed('../assets/images/icon-back.png')" 
								  label="  BACK" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true"
								  click="back_btn_clickHandler(event)"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Button icon="@Embed('../assets/images/icon-search.png')" 
								  label="  Audit Detail" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true" click="detail_btn_clickHandler(event)"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Button icon="@Embed('../assets/images/icon-list.png')" 
								  label="  Search" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true" click="search_btn_clickHandler(event)"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Button icon="@Embed('../assets/images/icon-list.png')" 
								  label="  Vehicle List" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true" click="vehicle_btn_clickHandler(event)"
								  />
					</s:HGroup>
				</s:BorderContainer>
			</s:VGroup>
			
		</s:BorderContainer>
