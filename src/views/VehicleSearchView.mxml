		<s:BorderContainer width="1265" height="640" backgroundImage="@Embed('../assets/images/container-bg1.PNG')" borderAlpha="0">
			
			<s:VGroup paddingTop="8" verticalAlign="top" width="1251" height="58" paddingLeft="5" paddingRight="5">
				<s:BorderContainer id="actionBar" width="1251" height="58" backgroundImage="@Embed('../assets/images/actionBar-bg.png')" borderAlpha="0">
					<s:HGroup horizontalAlign="left" verticalAlign="middle" height="100%" paddingLeft="150" paddingRight="10">
						<s:Label left="5" right="5" top="5" color="0x4A4A4A" fontWeight="bold"
								 text="Search By:" fontSize="14"/>
						<s:Button icon="@Embed('../assets/images/arrow-down.PNG')" 
								  iconPlacement="right"
								  label="VIN" skinClass="skins.Skin_TransparentButton_IconRight"
								  buttonMode="true"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Label left="5" right="5" top="5" color="0x4A4A4A" fontWeight="bold"
								 text="On:" fontSize="14"/>
						<s:Button icon="@Embed('../assets/images/arrow-down.PNG')" 
								  iconPlacement="right"
								  label="Last Characters" skinClass="skins.Skin_TransparentButton_IconRight"
								  buttonMode="true"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Spacer width="200" height="100%"/>
						<s:Label left="5" right="5" top="5" color="0x4A4A4A" fontWeight="bold"
								 text="Search Mode:" fontSize="14"/>
						<s:TabBar skinClass="skins.Skin_TabBar" selectedIndex="1">  
							<mx:ArrayCollection>
								<fx:String>Manual</fx:String> 
								<fx:String>Scan</fx:String> 
							</mx:ArrayCollection>
						</s:TabBar>
					</s:HGroup>
				</s:BorderContainer>
				<s:VGroup horizontalAlign="center" paddingTop="8" paddingLeft="100" paddingRight="100" verticalAlign="middle" width="1251" height="500">
					<s:HGroup horizontalAlign="left" verticalAlign="middle" width="100%" height="100%" paddingLeft="150" paddingRight="10">
						<s:Label left="5" right="5" top="5" color="0x4A4A4A" fontWeight="bold"
								 text="Enter Data" fontSize="14"/>
						<s:Spacer width="500" height="100%"/>
						<s:Button icon="@Embed('../assets/images/icon-select-blue.png')" 
								  label="  Search in all audits" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true"
								  />
					</s:HGroup>
					<s:BitmapImage source="@Embed('../assets/images/txtbox-bg.PNG')"/>
					<s:BitmapImage source="@Embed('../assets/images/scan.png')"/>
				</s:VGroup>
				<s:BorderContainer id="controlBar" width="1251" height="58" backgroundImage="@Embed('../assets/images/container-bg1.png')" borderAlpha="0">
					<s:HGroup horizontalCenter="0" horizontalAlign="center" verticalAlign="middle" gap="37" height="100%">
						<s:Button icon="@Embed('../assets/images/icon-back.png')" 
								  label="  BACK" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true"
								  click="back_btn_clickHandler(event)"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Button icon="@Embed('../assets/images/icon-home.png')" 
								  label="  Audit Detail" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true" click="detail_btn_clickHandler(event)"
								  />
						<s:BitmapImage source="@Embed('../assets/images/split.png')" />
						<s:Button icon="@Embed('../assets/images/icon-list.png')" 
								  label="  Vehicle List" skinClass="skins.Skin_TransparentButton"
								  buttonMode="true" click="vehicle_btn_clickHandler(event)"
								  />
					</s:HGroup>
				</s:BorderContainer>
			</s:VGroup>
			
		</s:BorderContainer>
