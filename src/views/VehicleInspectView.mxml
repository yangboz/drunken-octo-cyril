	<views:titleContent>
		
		<s:RichText color="0xFFFFFF" horizontalCenter="0" verticalCenter="0">
			<s:textFlow>
				<s:TextFlow>
					<s:span fontWeight="bold">Vehicle Inspection -</s:span>{data_vehicle.productSerial}
				</s:TextFlow>
			</s:textFlow>
		</s:RichText>
		
	</views:titleContent>
	
</views:ViewBase>